source "$CONFIG_DIR/colors.sh"

PLUGINS_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
# Configuring the general appearance of the bar.
# These are only some of the options available. For all options see:
# https://felixkratz.github.io/SketchyBar/config/bar
# If you are looking for other colors, see the color picker:
# https://felixkratz.github.io/SketchyBar/config/tricks#color-picker

# 32 height matches the notch perfectly
bar_config=(
  position=top
  height=32
  color=$BAR_COLOR
  display=main
)

sketchybar --bar "${bar_config[@]}"

##### Changing Defaults #####
# We now change some default values, which are applied to all further items.
# For a full list of all available item properties see:
# https://felixkratz.github.io/SketchyBar/config/items

defaults=(
  padding_left=5
  padding_right=5
  icon.font="SF Pro:Semibold:13.0"
  label.font="SF Pro:Semibold:13.0"
  icon.color=$WHITE
  label.color=$WHITE
  icon.padding_left=4
  icon.padding_right=4
  label.padding_left=4
  label.padding_right=4
)
sketchybar --default "${defaults[@]}"

##### Adding Left Items #####

# Integrate with Aerospace events
sketchybar --add event aerospace_workspace_change
# sketchybar --add event display_change

# Create a helper item to handle display changes
sketchybar --add item display_handler left \
  --set display_handler drawing=off \
  script="$PLUGINS_DIR/display_handler.sh" \
  --subscribe display_handler display_change

# Display name of active app
sketchybar --add item front_app left \
  --set front_app icon.drawing=off padding_left=9 script="$PLUGINS_DIR/front_app.sh" \
  --subscribe front_app front_app_switched

##### Adding Right Items #####
sketchybar --add item clock right \
  --set clock update_freq=20 \
  icon=ÙÄê´ \
  icon.font="SF Pro:Semibold:9.0" \
  icon.padding_right=2 \
  label.padding_left=2 \
  script="$PLUGINS_DIR/clock.sh" \
  --add item battery right \
  --set battery update_freq=120 script="$PLUGINS_DIR/battery.sh" \
  --subscribe battery system_woke power_source_change

##### Force all scripts to run the first time (never do this in a script) #####
sketchybar --update
