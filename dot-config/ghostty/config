theme = Dark+
font-family = Hack Nerd Font Mono
window-colorspace = display-p3
macos-titlebar-style = hidden

keybind = clear
keybind = global:unconsumed:cmd+r=reload_config
keybind = f12=inspector:toggle

# This allows us close windows with titlebar hidden
keybind = cmd+q=close_window

keybind = cmd+n=new_window

#keybind = unconsumed:ctrl+u=scroll_page_fractional:-0.5
#keybind = unconsumed:ctrl+d=scroll_page_fractional:0.5

# I bind these through terminal multiplexer instead
#
# REASON:
# 1. Ghostty doesn't doesn't have conditionals that allow me to have vimish keybindings outside vim
# without interferring with vim
# 2. Ghostty uses macos native tabs which does not work with my current window manager (Aerospace)

# REVIEW: Might no longer be needed after clearing all keybinds?
keybind = cmd+d=unbind
keybind = cmd+shift+d=unbind
keybind = cmd+w=unbind
keybind = cmd+t=unbind
keybind = cmd+m=unbind

keybind = cmd+1=unbind
keybind = cmd+2=unbind
keybind = cmd+3=unbind
keybind = cmd+4=unbind
keybind = cmd+5=unbind
keybind = cmd+6=unbind
keybind = cmd+7=unbind
keybind = cmd+8=unbind
keybind = cmd+9=unbind

keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
keybind = copy=copy_to_clipboard
keybind = paste=paste_from_clipboard

keybind = cmd+p=toggle_command_palette

# REVIEW: Wtf this doesn't behave as I would expect, cmd+ decreases font size and cmd- does nothing
# See https://github.com/ghostty-org/ghostty/discussions/8743
keybind = cmd+plus=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size

# Use https://enchanted.games/app/colour-converter/ to convert colours
custom-shader = shaders/cursor_smear.glsl
